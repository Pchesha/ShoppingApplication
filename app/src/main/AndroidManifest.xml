        <activity android:name=".Activities.MainActivity" android:theme="@style/MyAppTheme">

        </activity>

        <activity android:name=".Activities.MainActivityFirst" android:theme="@style/MyAppTheme">

        </activity>

        <activity android:name=".Activities.ProductViewActivity" android:theme="@style/MyAppTheme"></activity>
